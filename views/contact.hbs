<h1 class="text-center">Nous contacter</h1>

<form class="form-signin col-md-6" method="post">
            {{# each errorMessages }}
                  <p class="alert alert-danger">{{ this.msg }}</p>
            {{/each}}

      <div class="form-group">
            <label class="style"> <strong>Nom</strong> </label>
            <input type="name" class="form-control" aria-describedby="emailHelp" placeholder="Entrer votre nom" name = "name" value="{{ name }}">
      </div>
      <div class="form-group">
            <label class="style"> <strong>Adresse Email</strong> </label>
            <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Entrer votre email" name = "email" value="{{ email }}">
            <small class="form-text text-muted">Votre Email ne sera jamais partagÃ© avec quelqu'un d'autre.</small>
      </div>
      <div class="form-group">
            <label class="style"> <strong>Message</strong> </label>
            <textarea class="form-control" rows="3" name = "message">{{ message }}</textarea>
      </div>
      <button type="submit" class="btn btn-lg btn-primary">Envoyer</button>
</form>